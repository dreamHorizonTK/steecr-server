            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
        </dependency>
        <!-- Log4j2 异步支持，官方强烈建议哦，但是对于本地日志，反而更消耗性能 -->
